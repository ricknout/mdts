    </style>

    <style name="Widget.App.TabLayout.PrimarySurface.NoBackground" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.ShapeableImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Image</item>

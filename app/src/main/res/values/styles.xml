<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.AppBarLayout.Surface" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ControlHighlightOnSurface</item>
    </style>

    <style name="Widget.App.AppBarLayout.PrimarySurface" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ControlHighlightOnPrimarySurface</item>
    </style>

    <style name="Widget.App.Toolbar.Surface.NoBackground" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.App.Toolbar.PrimarySurface.NoBackground" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.App.TabLayout.PrimarySurface.NoBackground" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.ShapeableImageView.Profile" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Image.Profile</item>
    </style>

    <style name="Widget.App.ShapeableImageView.AlbumArt.Small" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Image.AlbumArt.Small</item>
    </style>

    <style name="Widget.App.ShapeableImageView.AlbumArt.Medium" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    </style>

    <style name="Widget.App.CardView.NowPlaying" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation_now_playing</item>
        <item name="cardBackgroundColor">?attr/colorPrimarySurface</item>
        <item name="rippleColor">@color/on_primary_surface_20</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ControlHighlightOnPrimarySurface</item>
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card.NowPlaying</item>
    </style>

</resources>
